generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model User {
	uuid			String		@db.Uuid()		@unique @id
	username		String						@unique
	name			String
	Key				Key?
	Class			Class		@relation(fields: [class_id], references: [uuid])
	class_id		String
	Role			Role		@relation(fields: [role_id], references: [uuid])
	role_id			String
}

model Key {
	uuid			String		@db.Uuid()		@unique @id
	User			User		@relation(fields: [user_id], references: [uuid])
	user_id			String		@unique
	secret			String
}

model Class {
	uuid				String		@db.Uuid()		@unique @id
	className			String
	classDescription	String
	User				User[]
}

// predefined roles, there shall only be 3, owner -> admin -> member
model Role {
	uuid			String		@db.Uuid()		@unique @id
	role_name		String
	User			User[]
}